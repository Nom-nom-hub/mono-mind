@echo off\r\necho Creating MonoMind release package...\r\n\r\nREM Create release directory\r\nset RELEASE_DIR=release\r\nif exist \"%RELEASE_DIR%\" rmdir /s /q \"%RELEASE_DIR%\"\r\nmkdir \"%RELEASE_DIR%\"\r\n\r\nREM Copy binaries to release directory\r\necho Copying binaries to release directory...\r\ncopy \"dist\\mono-linux-amd64\" \"%RELEASE_DIR%\" >nul\r\ncopy \"dist\\mono-windows-amd64.exe\" \"%RELEASE_DIR%\" >nul\r\ncopy \"dist\\mono-darwin-amd64\" \"%RELEASE_DIR%\" >nul\r\ncopy \"dist\\mono-darwin-arm64\" \"%RELEASE_DIR%\" >nul\r\n\r\nREM Rename binaries with version (if version.txt exists)\r\nif exist \"version.txt\" (\r\n    echo Adding version to binaries...\r\n    for /f %%i in (version.txt) do set VERSION=%%i\r\n    ren \"%RELEASE_DIR%\\mono-linux-amd64\" \"mono-%VERSION%-linux-amd64\"\r\n    ren \"%RELEASE_DIR%\\mono-windows-amd64.exe\" \"mono-%VERSION%-windows-amd64.exe\"\r\n    ren \"%RELEASE_DIR%\\mono-darwin-amd64\" \"mono-%VERSION%-darwin-amd64\"\r\n    ren \"%RELEASE_DIR%\\mono-darwin-arm64\" \"mono-%VERSION%-darwin-arm64\"\r\n    \r\n    REM Create checksums\r\n    echo Creating checksums...\r\n    cd \"%RELEASE_DIR%\"\r\n    certutil -hashfile mono-%VERSION%-linux-amd64 SHA256 > mono-%VERSION%-linux-amd64.sha256\r\n    certutil -hashfile mono-%VERSION%-windows-amd64.exe SHA256 > mono-%VERSION%-windows-amd64.exe.sha256\r\n    certutil -hashfile mono-%VERSION%-darwin-amd64 SHA256 > mono-%VERSION%-darwin-amd64.sha256\r\n    certutil -hashfile mono-%VERSION%-darwin-arm64 SHA256 > mono-%VERSION%-darwin-arm64.sha256\r\n) else (\r\n    echo No version.txt found, using generic names\r\n    \r\n    REM Create checksums\r\n    echo Creating checksums...\r\n    cd \"%RELEASE_DIR%\"\r\n    certutil -hashfile mono-linux-amd64 SHA256 > mono-linux-amd64.sha256\r\n    certutil -hashfile mono-windows-amd64.exe SHA256 > mono-windows-amd64.exe.sha256\r\n    certutil -hashfile mono-darwin-amd64 SHA256 > mono-darwin-amd64.sha256\r\n    certutil -hashfile mono-darwin-arm64 SHA256 > mono-darwin-arm64.sha256\r\n)\r\n\r\necho Release package created successfully in the %RELEASE_DIR% directory!\r\necho Release contents:\r\ndir\r\npause